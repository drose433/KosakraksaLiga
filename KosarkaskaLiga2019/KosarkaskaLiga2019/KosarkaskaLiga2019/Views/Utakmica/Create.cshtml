@model KosarkaskaLiga2019.Models.Utakmica

@{
    ViewData["Title"] = "Create";
}

<h1 style="font-family: 'Lobster', cursive;">Kreiraj</h1>

<h4>Utakmicu</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DomacinId" class="control-label"></label>
                <select asp-for="DomacinId" class ="form-control" asp-items="ViewBag.DomacinId"></select>
            </div>
            <div class="form-group">
                <label asp-for="GostId" class="control-label"></label>
                <select asp-for="GostId" class ="form-control" asp-items="ViewBag.GostId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Kolo" class="control-label"></label>
                <input asp-for="Kolo" class="form-control" />
                <span asp-validation-for="Kolo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rezultat" class="control-label"></label>
                <input asp-for="Rezultat" class="form-control" />
                <span asp-validation-for="Rezultat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" style="background-color:#b250b7;" asp-action="Index">Nazad na listu utakmica</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
